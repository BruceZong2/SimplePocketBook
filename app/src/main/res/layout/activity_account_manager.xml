<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.account.AccountManagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_margin_12dp"
        android:paddingRight="@dimen/common_margin_12dp"
        android:layout_marginTop="@dimen/common_margin_12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_account_balance_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1110.00"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_margin_12dp"
        android:paddingRight="@dimen/common_margin_12dp"
        android:layout_marginTop="@dimen/common_margin_12dp"
        android:background="#eeeeee"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_account_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_6dp"/>
        <ListView
            android:id="@+id/lv_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/common_margin_12dp"
            android:scrollbars="none"/>
    </LinearLayout>

</android.widget.LinearLayout>